{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["esnext"], // Include only necessary libraries
    "types": ["node"] // Include only necessary types
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "node_modules/@types/react-native/index.d.ts",
    "node_modules/@types/react-native/globals.d.ts"
  ]
}
